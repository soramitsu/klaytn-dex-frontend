{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,

    // there are a lot in src/types/typechain
    // anyway, let ESLint catch those errors
    "noUnusedLocals": false,

    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["vitest", "vitest/importMeta", "vite/client", "vue/ref-macros"],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "exclude": ["dist", "node_modules", "cypress", "cypress.config.ts"]
}
